# Supabase Configuration
# Get these values from your Supabase project settings: https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Admin Configuration
# Comma-separated list of user UUIDs who can approve/reject payment orders
ADMIN_USER_IDS=uuid1,uuid2,uuid3

# WebSocket Configuration (Optional)
# URL for real-time exchange rate updates
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:3001

# AI Configuration
# Choose your AI provider: openai, google, anthropic
AI_PROVIDER=google

# ===== Solo configura UNO de los siguientes proveedores =====

# OpenAI (opcional - solo si AI_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini

# Google Gemini (opcional - solo si AI_PROVIDER=google)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=AIzaSyAo8XYR8x62e6WWpFLVeh_uZqV8MOLTCFI
GOOGLE_MODEL=gemini-3-flash

# Anthropic Claude (opcional - solo si AI_PROVIDER=anthropic)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-haiku-4.5

# Rate Limiting (Upstash Redis)
# Get these from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token
